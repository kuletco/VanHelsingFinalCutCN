		<td_world_heal>
			<name>
				<CHS>第二次机会</CHS>
			</name>
			<desc>
				<CHS>提升指定区域内的生命回复。</CHS>
			</desc>
		</td_world_heal>
		<td_world_Artillery>
			<name>
				<CHS>大炮</CHS>
			</name>
			<desc>
